<?xml version="1.0" encoding="UTF-8"?>

<processing>
	<job name="show quickstart guide">
		<os family="windows" />
		<executeForPack name="Docs"/>
		<executefile name="cmd">
			<arg>/c</arg>
			<arg>$INSTALL_PATH\doc\pdf\quickstart_guide.pdf</arg>
		</executefile>
	</job>

	<job name="show quickstart guide">
		<os family="unix" />
		<executeForPack name="Docs"/>
		<executefile name="xdg-open">
			<arg>$INSTALL_PATH/doc/pdf/quickstart_guide.pdf</arg>
		</executefile>
	</job>

</processing>
